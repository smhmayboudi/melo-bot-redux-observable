{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6",
    "strict": true
  },
  "exclude": [
    "**/__mocks__",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "types/**/*"
  ]
}